{
  "name": "sankar-skeleton",
  "version": "1.0.0",
  "description": "A starter template for Express JS apps.",
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "bin/www",
  "author": "Sankar Prasad Biswas <sankarbiswas07@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "serve": "nodemon ./bin/www",
    "dev": "nodemon --inspect ./bin/www",
    "lint": "npm run lint:quiet",
    "lint:quiet": "eslint --quiet './**/*.js'",
    "lint:all": "eslint './**/*.js'",
    "lint:fix": "eslint './**/*.js' --quiet --fix",
    "gendoc": "apidoc -i routes/ -o public/docs"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "email-templates": "^8.0.3",
    "express": "^4.18.2",
    "express-jwt": "^6.0.0",
    "helmet": "^4.3.1",
    "http-errors": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mongoose": "^5.11.11",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-mocks-http": "^1.9.0",
    "randomstring": "^1.1.5",
    "serve-favicon": "^2.5.0"
  },
  "eslintIgnore": [
    "public/",
    "bin/"
  ],
  "devDependencies": {
    "apidoc": "^0.17.7",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^1.3.1",
    "nodemon": "^2.0.4",
    "nyc": "^14.1.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint:quiet"
    }
  }
}
